{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug STM32",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            "executable": "./build/firmware.elf",
            "device": "STM32F103C8",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f1x.cfg"
            ],
            "runToEntryPoint": "main",
            "svdFile": "${workspaceFolder}/svd/STM32F103.svd"
        }
    ]
}
